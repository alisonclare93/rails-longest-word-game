<div class="container">
  <h1>New Game</h1>

  <ul>
    <% @letters.each do |letter| %>
      <li> <%= letter %> </li>
    <% end %>
  </ul>

  <p>What is the longest word you can find?</p>

  <form action="/score" method="POST">
    <div class="form-group">
      <input type="text" name="word" id="word-input">
      <input type="submit" value="Play" class="btn">
    </div>
    <%= hidden_field_tag 'letters_array', @letters %>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  </form>
</div>
